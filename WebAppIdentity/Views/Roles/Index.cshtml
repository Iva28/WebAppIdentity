@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Roles</h3>
<table>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="margin: 0;">
                    <input value="Delete" type="submit" style="padding: 5px;" />
                </form>
            </td>
        </tr>
    }
</table>
<br />
<div class="a"><a asp-action="Create">Add role</a></div>
<div class="a"><a asp-action="UserList">Users</a></div>
